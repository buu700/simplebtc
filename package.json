  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/buu700/simplebtc/issues"
  },
  "dependencies": {
  	"xmlhttprequest": "*",
    "node-persist": "*",
    "bitcoinjs-lib": "*",
    "bitcore": "*",
    "form-data": "*"
